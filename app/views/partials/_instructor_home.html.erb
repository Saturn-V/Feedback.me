<div class="header">
  <span class="title medium">Welcome, <%= current_user.first_name %> <%= current_user.last_name %></span>
  <%= button_to 'Create Classroom', new_classroom_path, method: :get, :class => 'button-primary' %>
</div>

<div class="section">
  <% if @user.classrooms.count > 0 %>
    <% @user.classrooms.each do |classroom| %>
      <%= link_to classroom_path(classroom) do %>

        <div class="card">
          <span class="title medium"><%= classroom.name %></span>
          <span>Student Count: <%= classroom.users.count %></span>
        </div>

      <% end %>
    <% end %>
  <% else %>
    <span class="title"> No Classrooms.</span>
  <% end %>
</div>
