<div class="header">
  <span class="title medium">Select the classroom you'd like to send a form to:</span>
</div>

<div class="section">
  <span class="title small">Your classes</span>
  <% @classrooms.each do |classroom| %>
    <%= link_to classroom_forms_path(classroom) do %>
      <div class="card full">
        <span class="sub title"><%= classroom.name %></span>
        <span>Subject: <%= classroom.subject %></span>

        <span>Student Count: <%= classroom.users.count %></span>
      </div>
    <% end %>
  <% end %>
</div>
