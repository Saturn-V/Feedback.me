<span class="title">Instructor Home Page <%= button_to 'Create Classroom', new_classroom_path, method: :get %></span>

<% if @user.classrooms.count > 0 %>
  <% @user.classrooms.each do |classroom| %>
    <div class="classroom-section">
      <h3><%= link_to classroom.name, classroom_path(classroom), :class => "sub title" %></h3>
      <span>Student Count: <%= classroom.users.count %></span>
    </div>
  <% end %>
<% else %>
  <span class="title"> No Classrooms.</span>
<% end %>
