<div class="header">
  <span class="title medium">Welcome, <%= current_user.first_name %> <%= current_user.last_name %></span>
</div>

<div class="section">
  <span class="title medium">Form Responses Recieved</span>
  <% if @feedback_requests.empty? %>
    <div class="card">
      <span class="title">You haven't made any Feedback Requests.</span>
    </div>
  <% else %>
    <div class="row">
      <% @feedback_requests.each do |feedback_request| %>
        <% submited = feedback_request.responses.submited.count %>
        <% incomplete = feedback_request.responses.incomplete.count %>
        <% students = feedback_request.classroom.users.count - 1 %>
        <%= link_to classroom_path(feedback_request.classroom), :class => 'four columns card border-left align-left' do %>

            <span class="title small"><%= feedback_request.classroom.name %></span>
            <span class="title small">Complete: <%= (submited / (submited + incomplete) * 100).to_i %>%</span>
            <span class="text medium">Submited: <%= submited %></span>
            <span class="text medium">Incomplete: <%= incomplete %></span>
            <span class="text medium">Student Count: <%= students %></span>




        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
