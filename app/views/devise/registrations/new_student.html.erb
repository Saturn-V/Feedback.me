  <h2 class="title">Sign up as a Student</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, :class => "sub title" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :first_name, :class => "sub title" %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name, :class => "sub title" %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, :class => "sub title" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => "sub title" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.hidden_field :student, value: true %>
  </div>

  <div class="field">
    <%= f.hidden_field :instructor, value: false %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up", :name => 'student_button' %>
  </div>

  <% end %>

  <%= render "devise/shared/links" %>
