<div class="header align-center">
  <span class="title large">Teachers, let's get started</span>
</div>

<div class="row">
  <%= link_to root_path, :class => 'three columns' do %>
  <img src="/assets/back.svg" alt="back button" style="position: absolute">
  <% end %>
  <div class="six columns offset-by-three columns">
    <%= render "devise/shared/links" %>
  </div>

</div>


<div class="row section center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

  <div class="field six columns offset-by-three columns">
    <%= f.label :email, :class => 'title small' %>
    <%= f.email_field :email, autofocus: true, :class => 'u-full-width' %>
  </div>

  <br>

  <div class="field six columns offset-by-three columns">
    <%= f.label :first_name, :class => 'title small' %>
    <%= f.text_field :first_name, autofocus: true, :class => 'u-full-width' %>
  </div>

  <br>

  <div class="field six columns offset-by-three columns">
    <%= f.label :last_name, :class => 'title small' %>
    <%= f.text_field :last_name, autofocus: true, :class => 'u-full-width' %>
  </div>

  <br>

  <div class="field six columns offset-by-three columns">
    <%= f.label :password, :class => 'title small' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", :class => 'u-full-width' %>
  </div>

  <br>

  <div class="field six columns offset-by-three columns">
    <%= f.label :password_confirmation, :class => 'title small' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'u-full-width' %>
  </div>


  <div class="actions six columns offset-by-three columns">
    <br>
    <%= f.submit "Sign up", :name => 'instructor_button' %>
  </div>
  <% end %>
</div>
