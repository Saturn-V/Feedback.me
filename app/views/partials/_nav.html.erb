<%= link_to "Feedback", root_path, :class => 'name' %>

<div class="nav-items">
  <% if user_signed_in? %>

    <% if current_user.try(:instructor?) and current_user.classrooms.count > 0 %>
      <%= link_to "Create Classroom", new_classroom_path %>
      <%= link_to "Forms", classroom_forms_path(@classroom) if @classroom %>
    <% else %>
      <%= link_to "Classrooms", classrooms_path %>
      <%= link_to "Notifications", notifications_path %>
    <% end %>

    <%= link_to 'Log Out', destroy_user_session_path, method: :delete %>

  <% else %>
    <%= link_to "Instructor", new_instructor_registration_path, :style => "color: #EA5D32;" %>
    <%= link_to "Student", new_student_registration_path, :style => "color: #30A7BE" %>
    <footer>
      <%= link_to "Log In", new_user_session_path %>
    </footer>
  <% end %>
</div>
