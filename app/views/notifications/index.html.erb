<div class="header">
  <span class="title medium">Notifications</span>
</div>

<div class="section">
  <div class="row">

    <% if @incomplete_notifications.empty? %>
      <div class="section">
        <div class="row">
          <div class="card flat six columns align-left">
            <span class="text medium">No notifications at this time. Check back later!</span>
          </div>
        </div>
      </div>
    <% else %>
      <% @incomplete_notifications.each do |notification| %>
        <div class="six columns card align-left">
          <%= link_to(edit_response_path(notification.response)) do %>
            <section>
              <span class="title med-sml">Feedback Request</span>
              <span class="title x-sml minor"><%= notification.response.form.assesment_type %></span>
              <span class="title x-sml minor">from <i class="splash orange" style="font-size: inherit;"><%= notification.sender.first_name %> <%= notification.sender.last_name %></i> in <i class="splash orange" style="font-size: inherit;"> <%= notification.response.classroom.name %></i></span>
              <span class="title x-sml minor">Sent <%= time_ago_in_words(notification.created_at) %> ago</span>
            </section>
          <% end %>
        </div>
      <% end %>
    <% end %>

  </div>
</div>
