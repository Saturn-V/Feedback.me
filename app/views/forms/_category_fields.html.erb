<% unless f.object.name == 'Free Response' %>
  <div class="form-fields card flat twelve columns">

    <!--  Header -->
    <div class="row">
      <div class="twelve columns">
        <div class="u-pull-left">
          <%= f.label :name, 'Category Type', :class => "title small bold" %>
          <%= f.select :name, [ 'Core','Character','Technical','Free Response' ], :prompt => 'Select One' %>
          <%= link_to_remove_fields "remove", f %>
        </div>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="eleven columns offset-by-one column">
        <span class="title med-sml">Competencies</span>
      </div>
      <span class="title small bold splash orange"><%= link_to_add_fields "Add Question", f, :questions %></span>
    </div>

    <div class="row" id="questions">
    </div>

    <%= f.fields_for :questions do |builder| %>
      <%= render 'question_fields', :f => f %>
    <% end %>
  </div>
<% else %>
  <%= render 'category_free_fields', :f => f %>
<% end %>
